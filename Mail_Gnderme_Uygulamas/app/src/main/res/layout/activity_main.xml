<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/EditTextMailAdres"
    android:hint="Mail Gönderilecek Adresi Giriniz"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditTextMailKonu"
        android:hint="Mail Gönderilecek Konuyu Giriniz"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditTextMailİcerik"
        android:hint="Mail Gönderilecek İçeriği Giriniz"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MailGönder"
        android:id="@+id/Buton"/>


</LinearLayout>